#I think the following line scrolls a text formatted with toilet (a figlet clone capable of fancy colored output) over the screen
trap "tput cvvis" 0; tput civis; i=0; text="$@"; art=$(toilet -f big -w 10000 "$text"|sed 's/^/./'); doubleart=$(toilet -f big -w 10000 "$text   $text"|sed 's/^/./'); len=1; len=$((while read line; do if [ $len -lt ${#line} ]; then len=${#line}; fi; done; echo $len) <<<"$art"); while true; do let i=(i+1)%$(( $len+10 )); output=$((while read -r line; do cut -c$(( $i+1 ))-$(( $i+$(tput cols) ))<<<"$line"; done)<<<"$doubleart"); echo "$(tput clear)$output"; sleep 0.1s; done; tput cvvis
